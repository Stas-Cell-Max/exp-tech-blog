<div class="container mt-4">
  <div class="row">
    <!-- Blog Content Column -->
    <div class="col-lg-8">
      <article class="card mb-4 blog-post-card">
        <div class="card-body">
          <h2 class="card-title">{{title}}</h2>
          <div class="blog-post-meta">
            <small class="text-muted">Posted on {{formatDate date}} by {{user.name}}</small>
          </div>
          <div class="blog-post-content">
            <p>{{content}}</p>
          </div>
        </div>
      </article>
    </div>
    <!-- Comments Column -->
    <div class="col-lg-4">
      <div class="card comments-card">
        <div class="card-header">
          <h5 class="card-title">Comments</h5>
        </div>
        <div class="card-body">
          {{#if comments.length}}
            <div class="comments-container">
              {{#each comments}}
                <div class="card mb-2">
                  <div class="card-body">
                    <p class="comment-text">{{this.comment}}</p>
                    <div class="comment-footer">
                      <small class="text-muted">Commented by {{this.user.name}} on {{formatDate this.date}}</small>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          {{else}}
            <p>No comments yet. Be the first to comment!</p>
          {{/if}}
          <a href="/posts/{{id}}/comment" class="btn btn-primary mt-2">Leave a Comment</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
