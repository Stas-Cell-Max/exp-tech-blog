{{!-- Wrap posts in a container for layout purposes --}}
<div class="container">
  {{#each posts as |post|}}
    <div class="post">
      <h2 class="post-title">{{post.title}}</h2>
      <div class="post-content">{{truncate post.content 200}}</div>
      <div class="post-meta">
        Posted on {{formatDate post.createdAt}} <!-- Use createdAt for the date -->
      </div>
      <a href="/posts/{{post.id}}" class="btn-read-more">Read More</a>
    </div>
  {{/each}}
</div>
