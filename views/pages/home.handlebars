{{#each posts as |post|}}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{post.title}}</h5>
      <p class="card-text">{{post.excerpt}}</p>
      <a href="/posts/{{post.id}}" class="btn btn-primary">Read More</a>
      <p class="card-text">
        <small class="text-muted">Posted by {{post.author}} on {{post.date}}</small>
      </p>
    </div>
  </div>
{{/each}}
